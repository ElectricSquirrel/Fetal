<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_welcome">
    
	<include 
	    layout="@layout/common_top"/>
	<LinearLayout 
	    style="@style/match_width_height"
	    android:orientation="vertical">
	    <RelativeLayout 
	        style="@style/match_width_auto_height"
	        android:layout_weight="1"
	        android:paddingLeft="20dp"
	        android:paddingRight="20dp">
	        <LinearLayout 
	            style="@style/auto_width_height"
	            android:orientation="horizontal"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:gravity="center">
	            <ImageView 
	                style="@style/auto_width_height"
	                android:src="@drawable/icon_report_calendar"/>
	            <LinearLayout 
	                style="@style/auto_width_height"
	                android:orientation="vertical"
	                android:layout_marginLeft="10dp">
	                <TextView 
	                    android:id="@+id/calendar"
	                    style="@style/auto_width_height"
	                    android:textSize="12sp"
	                    android:textColor="#fe90a9"
	                    android:text="孕12周 84天"/>
	                <TextView 
	                    android:id="@+id/dater"
	                    style="@style/auto_width_height"
	                    android:textColor="#fe90a9"
	                    android:textSize="12sp"
	                    android:text="2014/4/18 9:10"/>
	            </LinearLayout>
	        </LinearLayout>
	        <LinearLayout 
	            style="@style/auto_width_height"
	            android:orientation="horizontal"
	            android:layout_alignParentRight="true"
	            android:layout_centerVertical="true"
	            android:gravity="center">
	            <ImageView 
	                style="@style/auto_width_height"
	                android:src="@drawable/icon_report_heart_big"/>
	            <LinearLayout 
	                style="@style/auto_width_height"
	                android:orientation="vertical"
	                android:layout_marginLeft="10dp">
	                <TextView 
	                    style="@style/auto_width_height"
	                    android:textSize="8sp"
	                    android:textColor="#fe90a9"
	                    android:text="平均胎心率"/>
	                <TextView 
	                    android:id="@+id/average"
	                    style="@style/auto_width_height"
	                    android:textSize="30sp"
	                    android:textColor="#fe90a9"
	                    android:text="125"/>
	            </LinearLayout>
	        </LinearLayout>
	    </RelativeLayout>
	    <LinearLayout 
	        style="@style/match_width_auto_height"
	        android:orientation="vertical"
	        android:layout_weight="1"
		    android:layout_gravity="center">
		    <LinearLayout 
		        style="@style/match_width_auto_height"
		        android:orientation="horizontal"
		        android:gravity="center"
	        	android:layout_weight="1"
		        android:paddingLeft="30dp"
		        android:paddingRight="30dp">
		        <ImageView 
		            style="@style/auto_width_height"
		            android:layout_weight="1"
		            android:src="@drawable/icon_report_heart_small"/>
		        <TextView 
		            android:id="@+id/min"
		            style="@style/auto_width_height"
		            android:layout_weight="1"
		            android:textSize="8sp"
		            android:text="最低胎心率：115"/>
		        <ImageView 
		            style="@style/auto_width_height"
		            android:layout_weight="1"
		            android:src="@drawable/icon_report_line"/>
		        <ImageView 
		            style="@style/auto_width_height"
		            android:layout_weight="1"
		            android:src="@drawable/icon_report_heart_small"/>
		        <TextView 
		            android:id="@+id/max"
		            style="@style/auto_width_height"
		            android:layout_weight="1"
		            android:textSize="8sp"
		            android:text="最低胎心率：125"/>
		        <ImageView 
		            style="@style/auto_width_height"
		            android:layout_weight="1"
		            android:src="@drawable/icon_report_line"/>
		        <ImageView 
		            style="@style/auto_width_height"
		            android:layout_weight="1"
		            android:src="@drawable/icon_report_clock"/>
		        <TextView 
		            android:id="@+id/timer"
		            style="@style/auto_width_height"
		            android:layout_weight="1"
		            android:textSize="8sp"
		            android:text="10:53"/>
		    </LinearLayout>
		    <RelativeLayout 
		        style="@style/match_width_auto_height"
	        	android:layout_weight="1"
		        android:paddingLeft="10dp"
		        android:paddingRight="10dp">
		        <ImageView 
		            android:id="@+id/bgsurface"
		            style="@style/match_width_auto_height"
		            android:layout_alignParentTop="true"/>
			    <SurfaceView 
			        android:id="@+id/surface"
			        style="@style/auto_width_height"
			        android:layout_alignParentTop="true"/>
			    <ImageView 
			        android:id="@+id/thumbnail"
			        style="@style/auto_width_height"
			        android:layout_alignParentTop="true"/>
		    </RelativeLayout>
	    </LinearLayout>
        <ImageView 
            android:id="@+id/report"
	        android:layout_weight="1"
            style="@style/auto_width_height"/>
        <LinearLayout
            android:id="@+id/menu" 
            style="@style/match_width_auto_height"
            android:orientation="vertical">
	        <ImageView 
	            android:id="@+id/menu_on"
		        android:layout_weight="1"
	            android:visibility="gone"
	            style="@style/match_width_auto_height"
	            android:src="@drawable/btn_report_on"/>
	        <ImageView 
	            android:id="@+id/menu_off"
		        android:layout_weight="1"
	            style="@style/match_width_auto_height"
	            android:src="@drawable/btn_report_off"/>
        </LinearLayout>
	</LinearLayout>
</LinearLayout>
