<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout 
        style="@style/auto_width_height"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:orientation="vertical">
		<TextView 
		    android:id="@+id/calendar"
		    style="@style/auto_width_height"
		    android:textSize="14sp"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
	        android:textColor="#fe90a9"/>
		<LinearLayout 
		    style="@style/auto_width_height"
		    android:orientation="horizontal">
		    <ImageView 
		        android:id="@+id/chart"
		        style="@style/auto_width_height"
		        android:src="@drawable/img_recordset_thumbnail"/>
		    <ImageView 
		        style="@style/auto_width_height"
		        android:layout_gravity="center"
		        android:layout_margin="10dp"
		        android:src="@drawable/img_recordset_arrow"/>
		    <LinearLayout 
		        style="@style/auto_width_height"
		        android:layout_gravity="center"
		        android:orientation="vertical">
		        <TextView 
		            android:id="@+id/average"
		            style="@style/auto_width_height"
		    		android:textSize="14sp"
	        		android:textColor="#fe90a9"/>
		        <LinearLayout 
		            style="@style/auto_width_height"
		            android:orientation="horizontal"
		            android:layout_marginTop="5dp"
		            android:layout_marginBottom="5dp">
		            <TextView 
		                android:id="@+id/txt1"
		                style="@style/auto_width_height"
		    			android:textSize="14sp"
	        			android:textColor="#fe90a9"/>
		            <ImageView 
		                style="@style/auto_width_height"
		                android:src="@drawable/img_recordset_heart"/>
		        </LinearLayout>
		        <TextView 
		            android:id="@+id/txt2"
		            style="@style/auto_width_height"
		    		android:textSize="10sp"
	        		android:textColor="#fe90a9"/>
		    </LinearLayout>
		</LinearLayout>
		<TextView 
		    android:id="@+id/date"
		    style="@style/auto_width_height"
		    android:paddingTop="5dp"
		    android:paddingBottom="5dp"
		    android:textSize="12sp"
	        android:textColor="#fe90a9"/>
    </LinearLayout>
	<ImageView 
	    style="@style/match_width_auto_height"
	    android:src="@drawable/img_recordset_line"/>
</LinearLayout>
